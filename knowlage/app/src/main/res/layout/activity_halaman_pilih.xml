<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".halaman_pilih">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            app:srcCompat="@drawable/cc"
            android:id="@+id/imageView"
            tools:layout_editor_absoluteY="246dp"
            tools:layout_editor_absoluteX="141dp"/>
    <TextView
            android:text="CareerConnect"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_below="@+id/imageView"
            android:textSize="32dp"
            android:fontFamily="@font/istok_web_bold"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            tools:layout_editor_absoluteY="404dp"
            tools:layout_editor_absoluteX="98dp"
            android:textColor="#73A9F9"
            android:textColorHighlight="#0568FA"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:text="Masuk Sebagai Pelamar"
            android:layout_marginTop="100dp"
            android:background="@drawable/buttonblue"
            android:layout_centerHorizontal="true"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:id="@+id/button_pelamar" android:textColor="#FFFFFF"/>
    <androidx.appcompat.widget.AppCompatButton
            android:text="Masuk Sebagai Perusahaan"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonred"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_pelamar"
            android:id="@+id/button_perusahaan" android:textColor="#FFFFFF"/>
</RelativeLayout>