<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".halaman_pilih" android:id="@+id/relativeLayout">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            app:srcCompat="@drawable/cc"
            android:id="@+id/imageView"
            tools:layout_editor_absoluteY="246dp"
            tools:layout_editor_absoluteX="141dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"/>
    <TextView
            android:text="CareerConnect"
            android:layout_width="wrap_content"
            android:textSize="32dp"
            android:fontFamily="@font/istok_web_bold"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            tools:layout_editor_absoluteY="404dp"
            tools:layout_editor_absoluteX="98dp"
            android:textColor="#73A9F9"
            android:textColorHighlight="#0568FA"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
            android:text="Masuk Sebagai Pelamar"
            android:textSize="20dp"
            android:background="@drawable/buttonblue"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_pelamar"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="268dp"
            app:layout_constraintHorizontal_bias="0.508"/>
    <androidx.appcompat.widget.AppCompatButton
            android:text="Masuk Sebagai Perusahaan"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:background="@drawable/buttonred"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_perusahaan"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/button_pelamar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>