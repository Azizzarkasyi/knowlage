<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="10dp"
    android:layout_width="350dp"
    android:background="@drawable/bgmenuprofil"
    android:layout_height="110dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">

        <TextView
            android:fontFamily="@font/inter_medium"
            android:textSize="16dp"
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curiculum Vitae(CV)"/>
        <TextView
            android:fontFamily="@font/inter_medium"
            android:id="@+id/textView40"
            android:layout_below="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sudah upload"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:backgroundTint="#979797"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:padding="0dp"
                android:text="Lihat File"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:textAllCaps="false"
                android:padding="0dp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:backgroundTint="#979797"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Ganti File"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                android:textAllCaps="false"
                android:padding="0dp"
                android:layout_margin="5dp"
                android:backgroundTint="#979797"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Hapus File"/>
        </LinearLayout>

        <ImageButton
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageButton17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/add"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>