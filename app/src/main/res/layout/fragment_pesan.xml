<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".pesan">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/fragment_pesan"
        android:paddingStart="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Pesan"
            android:textSize="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/bgmenuprofil"
        android:layout_width="350dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fragment_pesan"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/userimage"/>
        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/epsn"/>
        <TextView
            android:textSize="14dp"
            android:fontFamily="@font/inter_bold"
            android:layout_toEndOf="@+id/imageView9"
            android:id="@+id/textView42"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PT. Royal Trust"/>
        <TextView
            android:textSize="10dp"
            android:fontFamily="@font/inter"
            android:layout_toEndOf="@+id/imageView9"
            android:layout_below="@id/textView42"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView43"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat sore, Nova. Kami baru saja
menerima pengajuan lamaran anda..."/>
        <TextView
            android:fontFamily="@font/inter"
            android:textSize="10dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.30 PM"/>


    </RelativeLayout>


</RelativeLayout>