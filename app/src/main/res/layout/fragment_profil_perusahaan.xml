<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".profil_perusahaan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingStart="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Profil"
            android:textSize="20dp"/>

    </RelativeLayout>
    <androidx.cardview.widget.CardView android:layout_width="wrap_content" android:layout_height="match_parent">

    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/bgprofil"
        android:paddingVertical="20dp"
        android:paddingStart="30dp">
        <ImageView
            android:id="@+id/imageView3d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/kai"/>
        <TextView
            android:id="@+id/nama_profild"
            android:fontFamily="@font/inter_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageView3d"
            android:text="Nova Savira" android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_profild"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageView3d"
            android:fontFamily="@font/inter"
            android:text="novao189@gmail.com" android:textColor="@color/white"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/akunsaya_profild"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:background="@drawable/bgmenuprofil"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp">

        <ImageButton
            android:id="@+id/imageButtonakunsayad"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/personprofil"/>
        <TextView
            android:id="@+id/textViewakunsayad"
            android:fontFamily="@font/inter_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageButtonakunsayad"
            android:text="Akun Saya"/>
        <ImageButton
            android:id="@+id/imageButtond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/backprofil"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/kata_sandi_profild"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:background="@drawable/bgmenuprofil"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp">

        <ImageButton
            android:id="@+id/imageButtonkatasandid"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/katasandiprofil"/>
        <TextView
            android:id="@+id/textViewkatasandid"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageButtonkatasandid"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kata Sandi"/>
        <ImageButton
            android:id="@+id/imageButton3d"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/backprofil"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/keluard"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:background="@drawable/bgmenuprofil"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp">

        <ImageButton
            android:id="@+id/imageButtonkeluard"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/keluar"/>
        <TextView
            android:id="@+id/textViewkeluard"
            android:layout_toEndOf="@+id/imageButtonkeluard"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:layout_height="wrap_content"
            android:text="Keluar"/>
        <ImageButton
            android:id="@+id/imageButton4d"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/backprofil"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="14dp"
        android:layout_marginTop="500dp"
        android:text="More"/>
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:background="@drawable/bgmenuprofil"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="530dp">

        <ImageButton
            android:id="@+id/imageButtonpusatbantuand"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/pusatbantuan"/>
        <TextView
            android:id="@+id/textView10d"
            android:layout_toEndOf="@+id/imageButtonpusatbantuand"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Pusat Bantuan"/>
        <ImageButton
            android:id="@+id/imageButton5d"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF" android:src="@drawable/backprofil"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:background="@drawable/bgmenuprofil"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="630dp">

        <ImageButton
            android:id="@+id/imageButtontentangaplikasid"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/tentangaplikasi"/>
        <TextView
            android:id="@+id/textView11d"
            android:layout_toEndOf="@+id/imageButtontentangaplikasid"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang Aplikasi"/>
        <ImageButton
            android:id="@+id/imageButton6d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:backgroundTint="#00FFFFFF" android:src="@drawable/backprofil"/>
    </RelativeLayout>

</FrameLayout>