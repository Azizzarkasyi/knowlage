<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buat_lamaran">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/fragment_buatlamaran_perusahaan"
        android:paddingStart="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Data Pekerjaan"
            android:textSize="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:padding="30dp"
        android:layout_below="@+id/fragment_buatlamaran_perusahaan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:id="@+id/textView63"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bidang yang dicari"/>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_below="@id/textView63"
            android:id="@+id/editTextText5"
            android:background="@drawable/edittext"
            android:paddingStart="10dp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Manger Bisinis"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_below="@+id/editTextText5"
            android:id="@+id/textView64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu Kerja"/>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView64"
            android:id="@+id/editTextText6"
            android:background="@drawable/edittext"
            android:paddingStart="10dp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:hint="09.00 - 17.00"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_below="@+id/editTextText6"
            android:id="@+id/textView65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gaji yang ditawarkan"/>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView65"
            android:id="@+id/editTextText7"
            android:background="@drawable/edittext"
            android:paddingStart="10dp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:hint="07 - Desember - 2024"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_below="@+id/editTextText7"
            android:id="@+id/textView66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Pekerjaan"/>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView66"
            android:id="@+id/editTextText8"
            android:background="@drawable/edittext"
            android:paddingStart="10dp"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Rp.13.xxx.xxx"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_below="@+id/editTextText8"
            android:id="@+id/textView67"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Pekerjaan"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginBottom="30dp"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/edittext"
            android:layout_width="350dp"
            android:layout_height="150dp">
            <EditText
                android:textSize="15dp"
                android:hint="Target :"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>



    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button15"
        android:background="@drawable/buttonblue"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posting"/>



</RelativeLayout>