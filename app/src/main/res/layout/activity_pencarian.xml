<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pencarian">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/searchengine"
        android:background="@drawable/bgsearch"
        android:layout_centerHorizontal="true"
        >


        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="305dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" android:background="@drawable/editextsearch" android:ems="10" android:hint="Search"
            android:inputType="text"/>
        <ImageButton
            android:id="@+id/imageButtonsearchpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:backgroundTint="#00FFFFFF" app:srcCompat="@drawable/search"/>
        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/dropdown"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/searchengine"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/hapushistori"
        android:background="@drawable/bghapushistori"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/x"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="Hapus Semua Pencarian"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/hapushistori"
        android:background="@drawable/bghapushistori"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:id="@+id/manager"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/imageButton13"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/search"/>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="Manager"/>
    </RelativeLayout>

</RelativeLayout>