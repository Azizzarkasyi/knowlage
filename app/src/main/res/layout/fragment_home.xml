        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pekerjaan1"
            android:id="@+id/ptperusahaan1"
            android:text="Pt.Royal Trust"
            android:layout_toEndOf="@+id/imageViewlogohome1"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ptperusahaan1"
            android:id="@+id/tempatpekerjaan1"
            android:text="Jakarta , Indonesia"
            android:layout_toEndOf="@+id/imageViewlogohome1"
            android:layout_marginStart="20dp"/>
    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/heart"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="59dp"
            android:layout_height="19dp"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buttonhome"
            android:layout_toLeftOf="@+id/button4"
            android:layout_alignParentBottom="true"
            android:textSize="10dp"
            android:padding="0dp"
            android:text="Detail"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button4"
            android:layout_width="59dp"
            android:layout_height="19dp"
            android:background="@drawable/buttonhome"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="10dp"
            android:padding="0dp"
            android:text="Apply"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/bghomemid"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="550dp"
        android:layout_width="370dp"
        android:layout_height="90dp">


    <ImageView
        android:id="@+id/imageViewlogohome2"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pekerjaan2"
            android:text="Staf It"
            android:layout_toEndOf="@+id/imageViewlogohome2"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pekerjaan2"
            android:id="@+id/ptperusahaan2"
            android:text="Pt.Royal Trust"
            android:layout_toEndOf="@+id/imageViewlogohome2"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ptperusahaan2"
            android:id="@+id/tempatpekerjaan2"
            android:text="Jakarta , Indonesia"
            android:layout_toEndOf="@+id/imageViewlogohome2"
            android:layout_marginStart="20dp"/>
    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/heart"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button5"
            android:layout_width="59dp"
            android:layout_height="19dp"
            android:textColor="@color/black"
            android:background="@drawable/buttonhome"
            android:layout_toLeftOf="@+id/button6"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:textSize="10dp"
            android:layout_marginEnd="20dp"
            android:padding="0dp"
            android:text="Detail"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button6"
            android:layout_width="59dp"
            android:layout_height="19dp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buttonhome"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="10dp"
            android:padding="0dp"
            android:text="Apply"/>
    </RelativeLayout>


</FrameLayout>