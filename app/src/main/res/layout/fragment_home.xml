<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="5dp"

>

    <ImageButton
        android:id="@+id/imageButtonmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/menu"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/recomendasi"
        android:text="Rekomendasi Untuk Anda"/>
    <ImageButton
        android:id="@+id/imageButtonsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:layout_marginStart="90dp"
        android:layout_toEndOf="@+id/recomendasi"
        android:src="@drawable/search"/>


</RelativeLayout>


    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bghometop"
        android:paddingStart="20dp"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/textViewfragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Temukan Loker Impian Mu dalam 10 menit"/>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/image1"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="141dp"
            android:layout_height="120dp"
            android:layout_below="@id/textViewfragment"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="125dp"
            android:fontFamily="@font/roboto"
            android:text="Bagikan Preferensi mu dan dapatkan info loker dari para ahli kami bagikan keseruan kamu dalam menggunakan aplikasi ini ke teman kamu"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="290dp"
        android:background="@drawable/bghomemid"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp">


        <ImageView
            android:id="@+id/imageViewlogohome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/pekerjaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageViewlogohome"
            android:text="Staf It"/>
        <TextView
            android:id="@+id/ptperusahaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pekerjaan"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageViewlogohome"
            android:text="Pt.Royal Trust"/>
        <TextView
            android:id="@+id/tempatpekerjaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ptperusahaan"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageViewlogohome"
            android:text="Jakarta , Indonesia"/>
        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/heart"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="59dp"
            android:layout_height="19dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/button"
            android:background="@drawable/buttonhome"
            android:padding="0dp"
            android:text="Detail"
            android:textColor="@color/black"
            android:textSize="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="59dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buttonhome"
            android:padding="0dp"
            android:text="Apply"
            android:textColor="@color/black"
            android:textSize="10dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/bghomemid"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="420dp"
        android:layout_width="370dp"
        android:layout_height="90dp">


    <ImageView
        android:id="@+id/imageViewlogohome1"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
