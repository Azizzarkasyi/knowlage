<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="5dp"

>

    <ImageButton
        android:id="@+id/imageButtonmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/menu"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/recomendasi"
        android:text="Rekomendasi Untuk Anda"/>
    <ImageButton
        android:id="@+id/imageButtonsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:layout_marginStart="90dp"
        android:layout_toEndOf="@+id/recomendasi"
        android:src="@drawable/search"/>


</RelativeLayout>




    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="180dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bghometop"
        android:paddingStart="20dp"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/textViewfragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Temukan Loker Impian Mu dalam 10 menit"/>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/image1"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="141dp"
            android:layout_height="120dp"
            android:layout_below="@id/textViewfragment"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="125dp"
            android:fontFamily="@font/roboto"
            android:text="Bagikan Preferensi mu dan
dapatkan info loker
dari para ahli kami
bagikan keseruan kamu dalam
menggunakan aplikasi ini
ke teman kamu"/>
    </RelativeLayout>


</FrameLayout>