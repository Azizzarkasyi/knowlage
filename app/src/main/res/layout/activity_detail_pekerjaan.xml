<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail_pekerjaan">
    <RelativeLayout
        android:id="@+id/rel_det"
        android:layout_marginTop="20dp"
        android:background="@drawable/editextsearch"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_width="360dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageButtonback"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="TextView"/>
        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/imageButtonback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/back"/>
        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:layout_toStartOf="@+id/imageButtonshare"
            app:srcCompat="@drawable/heart"/>
        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/imageButtonshare"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/share"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bot_rel_det"
        android:layout_width="366dp"
        android:layout_height="218dp"
        android:layout_below="@+id/rel_det"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:padding="10dp">
            <TextView
                android:fontFamily="@font/roboto_medium"
                android:layout_alignParentStart="true"
                android:id="@+id/textViewpekerjaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Account Manager"
                android:textSize="20dp"/>

        <TextView
            android:id="@+id/pembatas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="20dp"
            android:text="|"
            android:textSize="40dp"/>

            <TextView
                android:fontFamily="@font/roboto_medium"
                android:id="@+id/textViewPT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/pembatas"
                android:gravity="center"
                android:text="PT. Royal Trust"
                android:textSize="20dp"/>
        <TextView
            android:id="@+id/textViewtempat"
            android:fontFamily="@font/roboto_medium"
            android:layout_below="@+id/textViewpekerjaan"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Jakarta, Indonesia"/>
        <TextView
            android:id="@+id/textView14"
            android:fontFamily="@font/roboto_medium"
            android:layout_below="@+id/textViewtempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Time"/>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/textView15"
            android:fontFamily="@font/roboto_medium"
            android:layout_below="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diposting 8 hari yang lalu pada bulan ini"/>
        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15"
            android:fontFamily="@font/roboto_medium"
            android:text="Terakhir Pendaftaran 3 hari"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/des"
        android:layout_below="@+id/bot_rel_det"
        android:padding="40dp">


        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Deskripsi Job"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView17"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Target :"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView18"
            android:text="   -   Mencapai target yang telah di tentukan"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView19"
            android:text="   -   Monitoring Dan analisia progres tim dan distributor"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView20"
            android:text="   -   Memaksimalkan distribusi produk di area yang dicover"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView21"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Kualifikasi :"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView22"
            android:text="   -   Min. Pendidikan S1 Jurusan IT"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView23"
            android:text="   -   Min 3 Tahun pengalaman dibidang terkait"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView24"
            android:text="   -   Menguasai area jobs"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView25"
            android:text="   -   Memiliki kemampuan komunikasi yang baik "
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView26"
            android:text="   -   Disiplin dan memiliki kemampuan pemimpin yang baik
"
            android:textSize="12dp"/>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/des"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@drawable/buttonblue"
        android:text="Apply"
        android:textColor="#FFFFFF"/>


</RelativeLayout>