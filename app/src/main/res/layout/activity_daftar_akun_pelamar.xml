<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".daftar_akun_Pelamar">


    <TextView
            android:text="Daftar Akun"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:id="@+id/daftar_akun"
            tools:layout_editor_absoluteY="118dp"
            tools:layout_editor_absoluteX="142dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#020202"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <TextView android:layout_width="wrap_content"
              android:text="Nama Lengkap"
              android:fontFamily="@font/montserrat_medium"
              android:layout_marginTop="30dp"
              android:layout_below="@+id/daftar_akun"
              android:layout_marginStart="40dp"
              android:layout_height="wrap_content"
              android:id="@+id/nama_lengkap"
              app:layout_constraintStart_toStartOf="parent"
    />
    <EditText
            android:layout_width="327dp"
            android:layout_marginTop="5dp"
            android:layout_height="44dp"
            android:paddingStart="10dp"
            android:background="@drawable/edittext"
            android:inputType="text"
            android:layout_below="@+id/nama_lengkap"
            android:layout_centerHorizontal="true"
            android:hint="Nova Safira"
            android:ems="10"
            android:id="@+id/editTextText_nama_lengkap"
            tools:layout_editor_absoluteY="261dp"
            tools:layout_editor_absoluteX="82dp"
            app:layout_constraintTop_toBottomOf="@+id/daftar_email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <TextView android:layout_width="wrap_content"
              android:text="Alamat Email"
              android:layout_marginTop="20dp"
              android:layout_below="@+id/editTextText_nama_lengkap"
              android:fontFamily="@font/montserrat_medium"
              android:layout_marginStart="40dp"
              android:layout_height="wrap_content"
              android:id="@+id/daftar_email"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/editTextText_nama_lengkap"/>
    <EditText
            android:layout_width="327dp"
            android:layout_height="44dp"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/daftar_email"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext"
            android:inputType="text"
            android:hint="novan189@gmail.com"
            android:ems="10"
            android:id="@+id/editTextText_email"
            tools:layout_editor_absoluteY="376dp"
            tools:layout_editor_absoluteX="82dp"
            app:layout_constraintTop_toBottomOf="@+id/daftar_email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <TextView android:layout_width="wrap_content"
              android:text="Nomor Telepon"
              android:layout_marginTop="20dp"
              android:layout_below="@+id/editTextText_email"
              android:fontFamily="@font/montserrat_medium"
              android:layout_marginStart="40dp"
              android:layout_height="wrap_content"
              android:id="@+id/daftar_nomor_telepon"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/editTextText_email"/>
    <EditText
            android:layout_width="327dp"
            android:layout_height="44dp"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/daftar_nomor_telepon"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext"
            android:inputType="number"
            android:hint="+62"
            android:ems="10"
            android:id="@+id/editTextText_nomor_telepon"
            tools:layout_editor_absoluteY="376dp"
            tools:layout_editor_absoluteX="82dp"
            app:layout_constraintTop_toBottomOf="@+id/daftar_sandi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <TextView android:layout_width="wrap_content"
              android:text="Kata Sandi"
              android:layout_marginTop="20dp"
              android:layout_below="@+id/editTextText_nomor_telepon"
              android:fontFamily="@font/montserrat_medium"
              android:layout_marginStart="40dp"
              android:layout_height="wrap_content"
              android:id="@+id/daftar_sandi"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/editTextText_nomor_telepon"/>
    <EditText
            android:layout_width="327dp"
            android:layout_height="44dp"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/daftar_sandi"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext"
            android:inputType="textPassword"
            android:hint="*************"
            android:ems="10"
            android:id="@+id/editTextText_kata_sandi"
            tools:layout_editor_absoluteY="376dp"
            tools:layout_editor_absoluteX="82dp"
            app:layout_constraintTop_toBottomOf="@+id/daftar_sandi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <TextView android:layout_width="wrap_content"
              android:text="Konfirmasi Kata Sandi"
              android:layout_marginTop="20dp"
              android:layout_below="@+id/editTextText_kata_sandi"
              android:fontFamily="@font/montserrat_medium"
              android:layout_marginStart="40dp"
              android:layout_height="wrap_content"
              android:id="@+id/daftar_konfirm_sandi"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/editTextText_kata_sandi"/>
    <EditText
            android:layout_width="327dp"
            android:layout_height="44dp"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/daftar_konfirm_sandi"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext"
            android:inputType="textPassword"
            android:hint="*************"
            android:ems="10"
            android:id="@+id/editTextText_konfirm_sandi"
            tools:layout_editor_absoluteY="376dp"
            tools:layout_editor_absoluteX="82dp"
            app:layout_constraintTop_toBottomOf="@+id/daftar_konfirm_sandi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <CheckBox
            android:text="Saya setuju dengan persyaratan aplikasi"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/editTextText_konfirm_sandi"
            android:layout_marginStart="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/persetujuan"/>
    <androidx.appcompat.widget.AppCompatButton
            android:text="daftar"
            android:background="@drawable/buttondaftar"
            android:layout_width="171dp"
            android:textColor="@color/white"
            android:layout_height="40dp"
            android:layout_below="@+id/persetujuan"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/button_daftar_pelamar"/>
</RelativeLayout>