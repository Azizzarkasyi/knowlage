<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Apply_lamaran">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/lamaran_pekerjaan"
        android:paddingStart="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Lamaran Pekerjaan"
            android:textSize="20dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:background="@drawable/bgmenuprofil"
        android:id="@+id/bot_rel_det"
        android:layout_width="366dp"
        android:layout_height="218dp"
        android:layout_below="@+id/lamaran_pekerjaan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="10dp">
        <TextView
            android:fontFamily="@font/roboto_medium"
            android:layout_alignParentStart="true"
            android:id="@+id/textViewlamaranpekerjaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Account Manager"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/pembatas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="20dp"
            android:text="|"
            android:textSize="40dp"/>

        <TextView
            android:fontFamily="@font/roboto_medium"
            android:id="@+id/textViewlamaranPT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/pembatas"
            android:gravity="center"
            android:text="PT. Royal Trust"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/textViewlamarantempat"
            android:fontFamily="@font/roboto_medium"
            android:layout_below="@+id/textViewlamaranpekerjaan"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Jakarta, Indonesia"/>
        <TextView
            android:id="@+id/textView14"
            android:fontFamily="@font/roboto_medium"
            android:layout_below="@+id/textViewlamarantempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Time"/>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/textViewlamaranbulan"
            android:fontFamily="@font/roboto_medium"
            android:layout_below="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diposting 8 hari yang lalu pada bulan ini"/>
        <TextView
            android:id="@+id/textViewlamaranhari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewlamaranbulan"
            android:fontFamily="@font/roboto_medium"
            android:text="Terakhir Pendaftaran 3 hari"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/bot_rel_det"
        android:layout_width="380dp"
        android:layout_height="90dp"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/pp"
        android:background="@drawable/bgprofil"
        android:paddingVertical="20dp"
        android:paddingStart="30dp">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nova"/>
        <TextView
            android:id="@+id/nama_profil"
            android:fontFamily="@font/inter_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageView3"
            android:text="Nova Savira" android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_profil"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageView3"
            android:fontFamily="@font/inter"
            android:text="novao189@gmail.com" android:textColor="@color/white"/>

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView32"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_below="@+id/pp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@+id/recycleView3"
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonblue"
        android:text="Apply"
        android:textColor="#FFFFFF"/>

</RelativeLayout>