<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail_pelamar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/fragment_detail_perusahaan"
        android:paddingStart="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Detail Pelamar"
            android:textSize="20dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/fragment_detail_perusahaan"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bghomemid"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:id="@+id/ppppp"
        android:paddingRight="15dp"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/imageViewlogop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/pekerjaanp"
            android:textSize="14dp"
            android:fontFamily="@font/inter_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageViewlogop"
            android:text="Web Development"/>
        <TextView
            android:id="@+id/ptperusahaanp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pekerjaanp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageViewlogop"
            android:text="Pt.Royal Trust"/>
        <TextView
            android:id="@+id/tempatpekerjaanperusahaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ptperusahaanp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageViewlogop"
            android:text="Jakarta , Indonesia"/>
        <TextView
            android:id="@+id/deadlineperusahaan"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tempatpekerjaanperusahaan"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageViewlogop"
            android:text="Deadline 20 Oktober 2023"/>


    </RelativeLayout>
    <View
        android:layout_width="360dp"
        android:layout_height="3dp"
        android:id="@+id/line22a"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ppppp"
        android:background="@color/black"/>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/line22a"
        android:layout_width="380dp"
        android:id="@+id/pp21"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgprofil"
        android:paddingVertical="20dp"
        android:paddingStart="30dp">
        <ImageView
            android:id="@+id/imageView3d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nova"/>
        <TextView
            android:id="@+id/nama_profild"
            android:fontFamily="@font/inter_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageView3d"
            android:text="Nova Savira" android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:layout_below="@id/nama_profild"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageView3d"
            android:fontFamily="@font/inter"
            android:text="novao189@gmail.com"
            android:textColor="@color/white"/>

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/pp21"
        android:id="@+id/recycleView45"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/button16"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_centerHorizontal="true"
        android:id="@+id/button16"
        android:background="@drawable/buttongreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button17"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Terima"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button17"
        android:background="@drawable/buttonred2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:text="Tolak"/>

</RelativeLayout>